{
  // Default terminal
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  // VS Code settings
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  // Search settings
  "search.quickOpen.includeHistory": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/.history": true,
    "**/web/autosubliminal/static": true,
    "**/web/autosubliminal/src/assets/themes": true
  },
  // File settings
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.history/**": true,
    "**/web/autosubliminal/static/**": true
  },
  "files.associations": {
    "*.json": "jsonc", // Use json with comments by default
    "*.yaml": "yaml"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // Html settings
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.suggest.insertMode": "replace"
  },
  "html.format.wrapLineLength": 0, // No auto wrap
  "html.format.wrapAttributes": "preserve-aligned", // Keep manual wrapping, but align
  // Json/Jsonc settings
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Javascript settings
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
  },
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.quoteStyle": "single",
  // Typescript settings
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsdk": "web/autosubliminal/node_modules/typescript/lib", // Use project typescript version instead of latest version packaged with VS Code
  "typescript.updateImportsOnFileMove.enabled": "always",
  // Eslint settings
  "eslint.workingDirectories": [
    "web/autosubliminal"
  ],
  // Python settings
  "[python]": {
    "editor.tabSize": 4, // Python uses 4 spaces for tab
    "editor.codeActionsOnSave": {
      "source.unusedImports": "explicit"
    }
  },
  "python.languageServer": "Pylance",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.envFile": "${workspaceFolder}/.env",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.analysis.completeFunctionParens": true,
  "mypy-type-checker.ignorePatterns": [
    "autosubliminal/parsers/guessit/rules.py",
    "autosubliminal/providers/addic7ed_custom.py",
    "autosubliminal/providers/opensubtitles_com.py",
    "autosubliminal/providers/pitcher.py",
    "autosubliminal/refiners/omdb_custom.py"
  ]
}
