{
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "autosubliminal": "readonly",
    "PNotify": "readonly",
    "PNotifyBootstrap3": "readonly",
    "PNotifyDesktop": "readonly",
    "PNotifyGlyphicon": "readonly",
    "PNotifyMobile": "readonly",
    "PubSub": "readonly",
    "strftime": "readonly",
    "webRoot": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "no-console": "off",
    "no-redeclare": [
      "error",
      {
        "builtinGlobals": false
      }
    ],
    "no-unused-vars": [
      2,
      {
        "argsIgnorePattern": "^(autosubliminal|event|table|cellIndex)$"
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}